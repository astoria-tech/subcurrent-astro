---
import { feeds, type Feed } from "../data/feeds";

function getDomain(url: string): string {
  try {
    return new URL(url).hostname.replace("www.", "");
  } catch {
    return url;
  }
}
---

<div class="rounded-2xl border border-[#27272A] p-8 bg-[#0F0F11]">
  <h2 class="text-sm uppercase tracking-wider text-[#71717A] font-medium mb-6">
    Feed Sources
  </h2>
  <ul class="space-y-6">
    {
      feeds.map((feed: Feed) => (
        <li>
          <div class="text-[#E5E5E5] font-medium mb-1">{feed.authorName}</div>
          <a
            href={feed.url}
            class="text-[#71717A] hover:text-blue-400 transition-colors text-sm"
            target="_blank"
            rel="noopener noreferrer"
          >
            {getDomain(feed.url)}
          </a>
        </li>
      ))
    }
  </ul>
</div>
